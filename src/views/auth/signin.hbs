<div class="container p-4">
	{{>message}}	
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card text-center">
				<div class="card-header">
					<h3>SignIn</h3>
				</div>
				<div class="card-body">
					<img src="/img/logo.jpg" alt="logo" class="card-img-top mx-auto mb-3 rounded-circle w-5" style="width: 130px;">
					<form action="/signin" method="POST" autocomplete="off">
						<div class="input-group mb-3">
							<div class="input-group-prepend">
								<span class="input-group-text" id="basic-addon1"><i class="fas fa-at"></i></span>
							</div>
							<input type="text" class="form-control" name="username" placeholder="Your username..." autofocus>
						</div> 
						<div class="input-group mb-3">
							<div class="input-group-prepend">
								<span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" class="form-control" name="password" placeholder="Your password...">
						</div>	
						<div class="input-group mb-3">
							<button class="btn btn-success btn-block"><i class="far fa-save"></i> SignIn</button>
						</div>											
					</form>
				</div>
			</div>
		</div>
	</div>
</div>