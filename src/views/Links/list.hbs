<div class="container pl-2 pr-2 pt-4">
	<div class="row">
		<a href="/links/list" class="btnBack"><i class="fas fa-atlas"></i></a>
		<h3 class="marcoTituloVtn">My Links</h3>
	</div>
	{{>message}}
	<div class="row ">
		{{#each links}}
		<div class="col-md-3 text-center animate__animated animate__bounceIn">
			<div class="card m-1">
				<div class="card-body">
					<div class="row m-0 borderRow">
						<div class="col-10 col-xl-10 col-lg-10 col-md-10 col-ms-10 ">
							<a href="{{url}}" target="_blank">
								<h4 class="card-title text-uppercase m-auto">
									{{title}}
								</h4>
							</a>
						</div>
						<div class="col-2 col-xl-2 col-lg-2 col-md-2 col-ms-2 p-0 ">
							<div class="btn-group" role="group">
								<button id="btnGroupDrop1" type="button" data-toggle="dropdown" aria-haspopup="true"
									aria-expanded="false" class="btnMenu">
									<i class="fas fa-chevron-circle-down"></i>
								</button>
								<div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
									<a class="dropdown-item" href="{{url}}"><i class="fas fa-external-link-alt"></i> Go
										to site</a>
									<a class="dropdown-item" href="/links/edit/{{id}}"><i class="fas fa-edit"></i>
										Edit</a>
									<a class="dropdown-item" href="/links/delete/{{id}}"><i
											class="fas fa-trash-alt"></i>
										Delete</a>
								</div>
							</div>
						</div>
					</div>
					<p class="m-2">{{description}}</p>
				</div>
				<div class="card-footer p-0">
					<p class="m-2"><small>{{timeago created_at}}</small></p>
				</div>
			</div>
		</div>
		{{else}}
		<div class="col-md-4 mx-auto">
			<div class="card">
				<div class="card-body text-center">
					<h4>The are not Links saved yet!</h4>
					<a href="/links/new" class="btn btn-success">Create One!</a>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
</div>